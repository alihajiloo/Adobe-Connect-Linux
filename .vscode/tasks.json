{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ custom compile",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"main.cpp",
				"MyApp.cpp",
				"-I${workspaceFolder}/**",
				"-I${workspaceFolder}",
				"-L${workspaceFolder}",
				"`pkg-config", "--cflags", "--libs", "gtk+-3.0`",
				"-lcef",
				"-lX11",
				"-lcef_dll_wrapper",
				"-Wl,-rpath,.",
				"-g",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}